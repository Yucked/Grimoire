@page "/{Prov}"

@using Grimoire.Providers.Interfaces
@using Grimoire.Providers
@using Grimoire.Web.Components

@inject IServiceProvider Provider

<ProviderComponent Provider="_provider"></ProviderComponent>

@code {

    [Parameter]
    public string Prov { get; set; }

    private IGrimoireProvider _provider;

    protected override void OnInitialized() {
        _provider = Provider.GetProviders().FirstOrDefault(x => x.Name == Prov);
        base.OnInitialized();
    }

}